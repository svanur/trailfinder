{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "index.ts",     // <--- Explicitly include the root index.ts
    "types/**/*.ts" // <--- Include all .ts files under the types folder
  ],
  "exclude": ["node_modules", "dist"]
}